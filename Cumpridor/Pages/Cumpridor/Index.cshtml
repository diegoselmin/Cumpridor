@page
@model Cumpridor.IndexModel
@{
    ViewData["Title"] = "Cumpridores";
}
<script>
    function macFunction(x) {
        $("#item_view").modal();
    };
    $(document).ready(function () {
        $("#success-alert").hide();
        $("#success-alert").fadeTo(2000, 500).slideUp(500, function () {
            $("#success-alert").slideUp(500);
        });
    });
</script>
<div class="container">
    <div class="mail-box">
        <aside class="lg-side">
            <div class="inbox-head">
                <h3>Cumpridores</h3>
            </div>
            <a class="btn btn-primary btn-sx pull-left" style="margin-top:20px;margin-bottom: 20px;"
               asp-page="/Cumpridor/Add">
                <i class="glyphicon glyphicon-plus"></i> Adicionar Novo Cumpridor
            </a>
            <br />
            @{
                if (!string.IsNullOrEmpty(Model.Message))
                {
                    <div class="alert alert-success" id="success-alert" style="margin-top: 40px;">
                        <button type="button" class="close" data-dismiss="alert">x</button>
                        <strong>@Model.Message ! </strong>
                    </div>
                }
            }
            <div class="inbox-body" style="margin-top:20px;">
                <div class="mail-option">
                    <table class="table table-inbox table-hover" style="border:2px solid black;">
                        <thead>
                            <tr class="unread">
                                <th class="col-sm-2 view-message  dont-show">ID</th>
                                <th class="view-message col-sm-3">NOME</th>
                                <th class="view-message col-sm-2">CPF</th>
                                <th class="view-message col-sm-2">E-mail</th>
                                <th class="view-message col-sm-1">Senha</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.listaCumpridores)
                            {
                            <tr>
                                <td onclick="macFunction(this)" class="view-message  dont-show">
                                    <h4>@item.Id</h4>
                                </td>
                                <td onclick="macFunction(this)" class="view-message">
                                    <h5>@item.Nome</h5>
                                </td>
                                <td onclick="macFunction(this)">
                                    <h5>@item.Cpf</h5>
                                </td>
                                <td onclick="macFunction(this)" class="view-message">
                                    <h5>@item.Email</h5>
                                </td>
                                <td onclick="macFunction(this)" class="view-message">
                                    <h5>********</h5>
                                </td>
                                
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </aside>
    </div>
</div>


